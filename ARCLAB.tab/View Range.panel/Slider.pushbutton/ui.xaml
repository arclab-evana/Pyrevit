<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Metric View Range" Height="150" Width="350" 
        Topmost="True" WindowStartupLocation="CenterScreen" Background="#F0F0F0">
    
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Cut Plane Offset (mm)" 
                       FontWeight="Bold" 
                       FontSize="12" 
                       Foreground="#333333" 
                       Margin="0,0,0,10"/>
            
            <Slider Name="OffsetSlider" 
                    Minimum="-1000" 
                    Maximum="5000" 
                    TickFrequency="100" 
                    IsSnapToTickEnabled="False"
                    ValueChanged="on_slider_change"/>
            
            <TextBlock Name="ValueDisplay" 
                       Text="1200 mm" 
                       HorizontalAlignment="Center" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Foreground="#0078D7" 
                       Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
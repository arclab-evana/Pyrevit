<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Burger View Range" Height="450" Width="300" 
        Topmost="True" WindowStartupLocation="CenterScreen" 
        Background="#F0F0F0" ResizeMode="NoResize">
    
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/> <ColumnDefinition Width="20"/> <ColumnDefinition Width="*"/> </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="ELEVATION" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            
            <Slider Name="CutPlaneSlider" 
                    Grid.Row="1" 
                    Orientation="Vertical" 
                    Minimum="-500" Maximum="3000" 
                    TickFrequency="100" IsSnapToTickEnabled="False"
                    HorizontalAlignment="Center">
                <Slider.Resources>
                    <Style TargetType="Thumb">
                        <Setter Property="Width" Value="30"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Thumb">
                                    <Border Background="#444" CornerRadius="4" BorderBrush="Black" BorderThickness="1">
                                        <TextBlock Text="≡" Foreground="White" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="24" FontWeight="Bold"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Slider.Resources>
            </Slider>

            <TextBlock Name="CutDisplay" Text="1200" Grid.Row="2" 
                       HorizontalAlignment="Center" FontWeight="Bold" Foreground="#0078D7" Margin="0,10,0,0"/>
        </Grid>


        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>     <RowDefinition Height="50"/>    <RowDefinition Height="*"/>     </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Bottom">
                <TextBlock Name="TopDisplay" Text="+500" HorizontalAlignment="Center" Foreground="#555"/>
                <Slider Name="TopOffsetSlider" 
                        Orientation="Vertical" Height="120"
                        Minimum="100" Maximum="2000" Value="600"
                        HorizontalAlignment="Center">
                    <Slider.Resources>
                        <Style TargetType="Thumb">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Thumb">
                                        <TextBlock Text="▲" Foreground="#E04F5F" FontSize="20"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Slider.Resources>
                </Slider>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="#0078D7" BorderThickness="0,2,0,0" Height="2" VerticalAlignment="Center">
                <TextBlock Text="CUT PLANE" FontSize="9" Foreground="#0078D7" 
                           HorizontalAlignment="Right" Margin="0,-15,0,0"/>
            </Border>

            <StackPanel Grid.Row="2" VerticalAlignment="Top">
                <Slider Name="BottomOffsetSlider" 
                        Orientation="Vertical" Height="120" 
                        IsDirectionReversed="True"
                        Minimum="100" Maximum="2000" Value="600"
                        HorizontalAlignment="Center">
                    <Slider.Resources>
                        <Style TargetType="Thumb">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Thumb">
                                        <TextBlock Text="▼" Foreground="#E04F5F" FontSize="20"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Slider.Resources>
                </Slider>
                <TextBlock Name="BotDisplay" Text="-500" HorizontalAlignment="Center" Foreground="#555"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
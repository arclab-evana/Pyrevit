<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Range" Height="480" Width="140" 
        Topmost="True" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" Background="White">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#CCC" BorderThickness="0,0,0,1" Margin="0,0,0,10" Padding="0,0,0,5">
            <TextBlock Name="ViewNameLabel" Text="FLOOR PLAN" 
                       FontWeight="Bold" Foreground="Black" FontSize="11"
                       HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/> <ColumnDefinition Width="*"/>  </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,2,0">
                <TextBlock Name="TopLabel" Text="+600" Foreground="Black" Margin="0,0,0,30" FontWeight="Bold" FontSize="11" HorizontalAlignment="Right"/>
                <TextBlock Name="CutLabel" Text="1200" Foreground="Black" Margin="0,0,0,30" FontWeight="Bold" FontSize="14" HorizontalAlignment="Right"/>
                <TextBlock Name="BotLabel" Text="-600" Foreground="Black" FontWeight="Bold" FontSize="11" HorizontalAlignment="Right"/>
            </StackPanel>

            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Background="White" CornerRadius="2">
                <Canvas Name="SliderCanvas" Width="80" Height="350" ClipToBounds="True">
                    
                    <Rectangle Canvas.Left="39" Width="2" Height="800" Fill="#EEE"/>

                    <Thumb Name="CutThumb" Height="14" Width="18" Canvas.Left="55" Canvas.Top="150">
                        <Thumb.Template>
                            <ControlTemplate>
                                <Grid>
                                    <Rectangle Height="2" Width="15" Fill="Black" HorizontalAlignment="Left" Margin="-15,0,0,0"/>
                                    <Border Background="Black" CornerRadius="2" Width="14" HorizontalAlignment="Right">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Rectangle Height="1" Width="8" Fill="White" Margin="0,1"/>
                                            <Rectangle Height="1" Width="8" Fill="White" Margin="0,1"/>
                                            <Rectangle Height="1" Width="8" Fill="White" Margin="0,1"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>

                    <Thumb Name="TopThumb" Height="15" Width="30" Canvas.Left="25" Canvas.Top="50">
                        <Thumb.Template>
                            <ControlTemplate>
                                <Grid>
                                    <Path Data="M 0,15 L 15,0 L 30,15 Z" Fill="Black"/>
                                </Grid>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>

                    <Thumb Name="BotThumb" Height="15" Width="30" Canvas.Left="25" Canvas.Top="250">
                        <Thumb.Template>
                            <ControlTemplate>
                                <Grid>
                                    <Path Data="M 0,0 L 15,15 L 30,0 Z" Fill="Black"/>
                                </Grid>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>

                </Canvas>
            </Border>
        </Grid>
    </Grid>
</Window>
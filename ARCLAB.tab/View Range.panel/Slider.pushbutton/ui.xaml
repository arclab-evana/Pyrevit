<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Burger Range" Height="450" Width="200" 
        Topmost="True" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" Background="#F5F5F5">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <TextBlock Name="TopLabel" Text="Top: 2300" Foreground="#E04F5F" Margin="0,0,0,20" FontWeight="Bold"/>
            <TextBlock Name="CutLabel" Text="Cut: 1200" Foreground="#0078D7" Margin="0,0,0,20" FontWeight="Bold"/>
            <TextBlock Name="BotLabel" Text="Bot: 0"    Foreground="#E04F5F" FontWeight="Bold"/>
        </StackPanel>

        <Border Grid.Column="1" BorderBrush="#CCC" BorderThickness="1" Background="#FFF" CornerRadius="4">
            <Canvas Name="SliderCanvas" Width="60" ClipToBounds="True">
                
                <Rectangle Canvas.Left="29" Width="2" Height="800" Fill="#EEE"/>

                <Thumb Name="TopThumb" Height="24" Width="40" Canvas.Left="10" Canvas.Top="20">
                    <Thumb.Template>
                        <ControlTemplate>
                            <Grid>
                                <Path Data="M 0,10 L 20,0 L 40,10 L 40,24 L 0,24 Z" Fill="#E04F5F"/>
                                <TextBlock Text="▲" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                            </Grid>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <Thumb Name="CutThumb" Height="30" Width="50" Canvas.Left="5" Canvas.Top="100">
                    <Thumb.Template>
                        <ControlTemplate>
                            <Border Background="#0078D7" CornerRadius="4" BorderBrush="#005A9E" BorderThickness="1">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Rectangle Height="2" Width="30" Fill="#80FFFFFF" Margin="0,1"/>
                                    <Rectangle Height="2" Width="30" Fill="#80FFFFFF" Margin="0,1"/>
                                    <Rectangle Height="2" Width="30" Fill="#80FFFFFF" Margin="0,1"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <Thumb Name="BotThumb" Height="24" Width="40" Canvas.Left="10" Canvas.Top="180">
                    <Thumb.Template>
                        <ControlTemplate>
                            <Grid>
                                <Path Data="M 0,14 L 20,24 L 40,14 L 40,0 L 0,0 Z" Fill="#E04F5F"/>
                                <TextBlock Text="▼" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                            </Grid>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

            </Canvas>
        </Border>
    </Grid>
</Window>
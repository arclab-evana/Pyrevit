<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Range" Height="480" Width="220" 
        Topmost="True" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#CCC" BorderThickness="0,0,0,1" Margin="0,0,0,10" Padding="0,0,0,5">
            <TextBlock Name="ViewNameLabel" Text="FLOOR PLAN" 
                       FontWeight="Bold" Foreground="Black" 
                       HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/> <ColumnDefinition Width="*"/>  </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0">
                <TextBlock Name="TopLabel" Text="+600" Foreground="Black" Margin="0,0,0,30" FontWeight="Bold" FontSize="11"/>
                <TextBlock Name="CutLabel" Text="1200" Foreground="Black" Margin="0,0,0,30" FontWeight="Bold" FontSize="14"/>
                <TextBlock Name="BotLabel" Text="-600" Foreground="Black" FontWeight="Bold" FontSize="11"/>
            </StackPanel>

            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Background="White" CornerRadius="2">
                <Canvas Name="SliderCanvas" Width="100" Height="350" ClipToBounds="True">
                    
                    <Rectangle Canvas.Left="49" Width="2" Height="800" Fill="#EEE"/>

                    <Thumb Name="TopThumb" Height="20" Width="30" Canvas.Left="35" Canvas.Top="50">
                        <Thumb.Template>
                            <ControlTemplate>
                                <Grid>
                                    <Path Data="M 0,15 L 15,0 L 30,15 Z" Fill="Black"/>
                                </Grid>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>

                    <Thumb Name="CutThumb" Height="24" Width="30" Canvas.Left="35" Canvas.Top="150">
                        <Thumb.Template>
                            <ControlTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/> 
                                        <ColumnDefinition Width="18"/> </Grid.ColumnDefinitions>

                                    <Rectangle Grid.Column="0" Height="2" Fill="Black" VerticalAlignment="Center" Margin="-20,0,0,0"/>
                                    
                                    <Border Grid.Column="1" Background="Black" CornerRadius="2">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Rectangle Height="1" Width="10" Fill="White" Margin="0,1"/>
                                            <Rectangle Height="1" Width="10" Fill="White" Margin="0,1"/>
                                            <Rectangle Height="1" Width="10" Fill="White" Margin="0,1"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>

                    <Thumb Name="BotThumb" Height="20" Width="30" Canvas.Left="35" Canvas.Top="250">
                        <Thumb.Template>
                            <ControlTemplate>
                                <Grid>
                                    <Path Data="M 0,0 L 15,15 L 30,0 Z" Fill="Black"/>
                                </Grid>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>

                </Canvas>
            </Border>
        </Grid>
    </Grid>
</Window>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live View Range" Height="140" Width="300" 
        Topmost="True" WindowStartupLocation="CenterScreen" Background="#F0F0F0">
    <StackPanel Margin="15">
        <TextBlock Text="Cut Plane Offset (Feet)" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <Slider Name="OffsetSlider" 
                Minimum="-5" Maximum="15" 
                TickFrequency="0.1" IsSnapToTickEnabled="True"
                ValueChanged="on_slider_change"/>
        
        <TextBlock Name="ValueDisplay" Text="0.0" 
                   HorizontalAlignment="Center" FontSize="14" Margin="10"/>
    </StackPanel>
</Window>